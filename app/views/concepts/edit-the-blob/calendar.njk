{% macro monthCalendar(c) %}

<table class="app-calendar" role="table">
  <caption>{{ c.caption }}</caption>
  <thead>
    <tr>
      <th scope="col">Mon</th>
      <th scope="col">Tue</th>
      <th scope="col">Wed</th>
      <th scope="col">Thu</th>
      <th scope="col">Fri</th>
      <th scope="col">Sat</th>
      <th scope="col">Sun</th>
    </tr>
  </thead>
  <tbody>
    {% for week in c.weeks %}
      <tr>
        {% for day in week.days %}
          {% set classes -%}
            {%- if day.blank %} app-calendar-day--blank{% endif -%}
            {%- if day.inThePast %} app-calendar-day--past{% endif -%}
            {%- if not (day.inThePast or day.blank) %} app-calendar-day--available{% endif -%}
          {%- endset %}
          <td role="gridcell" class="app-calendar-day {{ classes }}">
            <span class="app-calendar-day__dayNumber">{{ day.date | formatDate('d') }}</span>
          </td>
        {% endfor %}
      </tr>
    {% endfor %}
  </tbody>
</table>
{% endmacro %}